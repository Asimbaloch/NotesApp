<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/gradient"
    android:padding="6dp"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title_output"
    android:textSize="20dp"
    android:textColor="#FF9800"
    tools:text="Title"
    android:textStyle="bold|italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_output"
        android:textColor="#fff"
        android:layout_below="@+id/title_output"
        tools:text="My notes description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_output"
        android:textColor="#575656"
        android:layout_below="@+id/description_output"
        android:gravity="end"
        tools:text="10th July 2020"/>

</RelativeLayout>